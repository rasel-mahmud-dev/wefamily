{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    // include src dir
    "sourceRoot": ".",
    "inlineSourceMap": true,
    //    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*"
  ],
  "ts-node-dev": {
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "module": "CommonJS"
    }
  }
}

